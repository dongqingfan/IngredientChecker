.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}
.header {
  height: 56px;
  background-color: #4CAF50;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16px;
  font-size: 18px;
  font-weight: bold;
}
.header .iconfont {
  font-size: 24px;
}
.content {
  flex: 1;
  padding: 16px;
}
.date-group {
  margin-bottom: 24px;
}
.date-group:last-child {
  margin-bottom: 0;
}
.date-header {
  font-size: 14px;
  color: #999;
  margin-bottom: 12px;
  padding-left: 4px;
}
.history-list {
  background-color: white;
  border-radius: 12px;
  overflow: hidden;
}
.history-item {
  display: flex;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
}
.history-item:last-child {
  border-bottom: none;
}
.history-img {
  width: 60px;
  height: 60px;
  border-radius: 8px;
  margin-right: 12px;
}
.history-info {
  flex: 1;
}
.history-info .history-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 4px;
  display: block;
}
.history-info .history-time {
  font-size: 12px;
  color: #999;
}
.history-score {
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 12px;
  color: white;
}
.history-score.score-high {
  background-color: #4CAF50;
}
.history-score.score-medium {
  background-color: #FFC107;
}
.history-score.score-low {
  background-color: #F44336;
}
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 0;
}
.empty-state .empty-image {
  width: 200px;
  height: 200px;
  margin-bottom: 20px;
}
.empty-state .empty-text {
  font-size: 16px;
  color: #999;
  margin-bottom: 20px;
}
.empty-state .scan-btn {
  width: 200px;
  height: 44px;
  background-color: #4CAF50;
  color: white;
  border-radius: 22px;
  font-size: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.empty-state .scan-btn:active {
  opacity: 0.8;
}